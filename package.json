{
  "name": "coachfit",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=coachfit-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build:prod && wrangler pages deploy dist --project-name coachfit-fitness-platform",
    "deploy:staging": "npm run build && wrangler pages deploy dist --project-name coachfit-staging",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000/v2",
    "test:api": "curl http://localhost:3000/api/users/coaches",
    "db:migrate:local": "wrangler d1 migrations apply coachfit-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply coachfit-production",
    "db:seed": "wrangler d1 execute coachfit-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute coachfit-production --local",
    "db:console:prod": "wrangler d1 execute coachfit-production",
    "git:commit": "git add . && git commit -m",
    "performance:test": "npm run build:prod && npm run test",
    "security:headers": "curl -I http://localhost:3000/v2"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "hono": "^4.9.6"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
